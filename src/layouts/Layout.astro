---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>

<style
    is:global
>
    @font-face {
        font-family: "FiraSans-Regular";
        src: url("/fonts/FiraSans-Regular.ttf");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "FiraSans-ExtraBold";
        src: url("/fonts/FiraSans-ExtraBold.ttf");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "FiraSans-ExtraLight";
        src: url("/fonts/FiraSans-ExtraLight.ttf");
        font-weight: lighter;
        font-style: normal;
        font-display: swap;
    }

    html {
        user-select: none;

        position: relative;
        min-height: 100vh;
        overflow: auto;
        overflow-x: hidden;
        box-sizing: border-box;

        background: '#fff';
    }

    body {
        font-family: "FiraSans-Regular", Arial, Helvetica, sans-serif;
        font-size: 1.5rem;
        color: var(--themeMain700);
        font-variant: normal;

        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        box-sizing: border-box;

        background-color: '#fff';
    }

    main {
        min-height: 100vh;
        min-width: 100vw;
    }
</style>
