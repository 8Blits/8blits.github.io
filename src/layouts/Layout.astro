---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="8Blits's Portfolio" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta property="og:title" content="8Blits's Portfolio" />
        <meta property="og:description" content="Self-driven creative mind, block game enthusiast!" />
        <meta property="og:image" content="/favicon.png" />
        <meta property="og:url" content="https://8blits.com" />
        <meta property="og:type" content="website" />
        <link rel="icon" type="image/svg+xml" href="/favicon.png" />
        <title>{title}</title>
    </head>
    <body>
        <slot />

        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const elements = document.querySelectorAll('.fade-in')
                
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            const e = entry.target as HTMLElement
                            e.style.opacity = "1"
                            observer.unobserve(e) // little optimization
                        }
                    });
                }, { threshold: 0.7 })
        
                elements.forEach(element => {
                    observer.observe(element)
                });
            });
        </script>
    </body>
</html>

<style
    is:global
>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;

    @font-face {
        font-family: "FiraSans-Regular";
        src: url("/fonts/FiraSans-Regular.ttf");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "FiraSans-ExtraBold";
        src: url("/fonts/FiraSans-ExtraBold.ttf");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "FiraSans-ExtraLight";
        src: url("/fonts/FiraSans-ExtraLight.ttf");
        font-weight: lighter;
        font-style: normal;
        font-display: swap;
    }

    html {
        user-select: none;

        position: relative;
        min-height: 100vh;
        overflow: auto;
        overflow-x: hidden;
        box-sizing: border-box;

        background: '#fff';
    }

    body {
        font-family: "FiraSans-Regular", Arial, Helvetica, sans-serif;
        font-size: 1.5rem;
        color: var(--themeMain700);
        font-variant: normal;

        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        box-sizing: border-box;

        background-color: '#fff';
    }

    main {
        min-height: 100vh;
        min-width: 100vw;
    }

    .fade-in {
        @apply opacity-0 transition-opacity duration-1000 ease-in-out
    }
</style>
